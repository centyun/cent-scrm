<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.centyun.user.mapper.ManagerMapper">
    <resultMap id="ModuleResultMap" type="com.centyun.core.domain.Module">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="parent_id" jdbcType="BIGINT" property="parentId"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="english_name" jdbcType="VARCHAR" property="englishName"/>
        <result column="icon" jdbcType="VARCHAR" property="icon"/>
        <result column="code" jdbcType="VARCHAR" property="code"/>
        <result column="url" jdbcType="VARCHAR" property="url"/>
        <result column="order_no" jdbcType="INTEGER" property="orderNo"/>
        <result column="status" jdbcType="INTEGER" property="status"/>
        <result column="create_time" jdbcType="TIMESTAMP" javaType="java.util.Date" property="createTime"/>
    </resultMap>
    
    <resultMap id="ManagerResultMap" type="com.centyun.user.domain.Manager">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="login_name" jdbcType="VARCHAR" property="loginName"/>
        <result column="password" jdbcType="VARCHAR" property="password"/>
        <result column="display_name" jdbcType="VARCHAR" property="displayName"/>
        <result column="phone" jdbcType="VARCHAR" property="phone"/>
        <result column="email" jdbcType="VARCHAR" property="email"/>
        <result column="language" jdbcType="VARCHAR" property="language"/>
        <result column="status" jdbcType="INTEGER" property="status"/>
        <result column="creator" jdbcType="BIGINT" property="creator"/>
        <result column="create_time" jdbcType="TIMESTAMP" javaType="java.util.Date" property="createTime"/>
        <result column="editor" jdbcType="BIGINT" property="editor"/>
        <result column="edit_time" jdbcType="TIMESTAMP" javaType="java.util.Date" property="editTime"/>
        <result column="password_time" jdbcType="TIMESTAMP" javaType="java.util.Date" property="passwordTime"/>
    </resultMap>
    
    <select id="getManager" resultMap="ManagerResultMap">
        select * from us_manager where login_name=#{loginName}
    </select>
    
    <select id="getModules" resultMap="ModuleResultMap">
        select * from us_module where status=1 order by order_no
    </select>
    
    <update id="updateLanguage">
        update us_manager set language=#{language} where id=#{id}
    </update>
</mapper>